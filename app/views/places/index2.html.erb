<p id="notice"><%= notice %></p>

<h1>Places</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Logo url</th>
      <th>Opening</th>
      <th>Closing</th>
      <th>Phone number</th>
      <th>Introduce</th>
      <th>Price from</th>
      <th>Price to</th>
      <th>Address</th>
      <th>Avg rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @places.each do |place| %>
      <tr>
        <td><%= place.name %></td>
        <td><%= place.email %></td>
        <td><%= place.logo_url %></td>
        <td><%= place.opening %></td>
        <td><%= place.closing %></td>
        <td><%= place.phone_number %></td>
        <td><%= place.introduce %></td>
        <td><%= place.price_from %></td>
        <td><%= place.price_to %></td>
        <td><%= place.address %></td>
        <td><%= place.avg_rating %></td>
        <td><%= link_to 'Show', place %></td>
        <td><%= link_to 'Edit', edit_place_path(place) %></td>
        <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Place', new_place_path %>
